$main-color: #2c2c2c;
$second-color: #ff8000;

@mixin transition($property: color, $duration: 0.7s){
  -moz-transition-property: $property;
  -moz-transition-duration: $duration;
  -webkit-transition-property: $property;
  -webkit-transition-duration: $duration;
}

* {
  margin: 0px;
  padding: 0px;
}

a {
  
  img {
    padding: 0px;
    border: none;
  }
  
  &.real{
    color: $main-color;
    padding: 1px 3px;
    @include transition(color, 0.7s);
  }
  
  &[data-event="hideItem"]:hover, &[data-event="removeItem"]:hover {
    color: #ffffff;
    border-color: #ff0000;
    background: #aa0000;
  }
  
  &[data-event="hideItem"], &[data-event="removeItem"] {
    padding: 1px 3px;
    border: 2px solid #dedede;
    text-decoration: none;
    background: inherit;
    color: $main-color;
    font-size: 8px;
    font-weight: bold;
  }
  
  &.search{
    color: $main-color;
    padding: 1px 3px;
  }

  &.real:link {
    background: inherit;
  }

  &.real:visited {
    background: inherit;
    color: #6e6e6e;
  }

  &.real:hover {
    color: $second-color;
  }

  &.image_link {
    text-decoration: none;
  }

  &.important_action {
    font-weight: bold;
    color: $second-color;
  }

  &.important_action:hover {
    color: #848280;
    background: transparent;
  }
}

acronym {
  cursor: help;
}

h4 {
  margin-left: 4em;
}

h3 {
  margin: 0.5em 1em;
}

body {
  font-family: verdana, arial, helvetica, sans-serif;
  font-size: 12px;
  color: $main-color;
  background: $main-color;
}

div#app_content {
  width: 95%;
  margin: 1% auto;
  padding: 1em 1em 2em 1em;
  background-color: #fcfcfc;
  border: 1px solid $second-color;
  box-shadow: 14px 14px 15px black;
  }

div#errorExplanation {
  width: 95%;
  border: 4px solid #dedede;
  padding-bottom: 1em;
  margin: 1.5em 0em;
  background-color: #ffffff;

  h2 {
    text-align: left;
    font-weight: bold;
    padding: .5em .5em .5em 1em;
    font-size: 1.2em;
    background-color: #ffff99;
    color: #000000;
    border-bottom: 4px solid #dedede;
  }

  p {
    font-weight: bold;
    padding: .5em .15em .5em 1em;
  }

  ul {
    margin-left: 3em;
    list-style: square;
  }
    
}

div#form_topics {
  padding: 1em;
  
  div.field, div.items {
    width: 70em;
    padding-top: 1em;
  }
}

div#new_project {
  padding: 2em;
  border: 3px solid #E3E0DD;
  
  div#items {
    margin: 1em;
  }
  
  div#option {
    width: 60%;
    margin: 1em;
  }
  
}

div#links {
  margin: 1%;
  
  div.pagination {
    float: right;
    margin: 0em .5em .5em 0em;    
  }

  div.pagination a {
    color: $main-color;
    padding: 1px 2px;
    text-decoration: none;
    border: 2px solid #dedede;
  }
  
  div.pagination a, div.pagination span {
    margin: 0em .1em;
  }
  
  div.pagination a:hover {
    color: #ffffff;
    background: #0000ff;
    border: 2px solid #0000ff;
  }
  
  div.pagination span.current {
    border: 2px solid #dedede;
    background: #dedede;
    color: #0000ff;
    font-weight: bold;
    padding: 1px 2px;
  }

  div.pagination span.disabled {
    border: 2px solid #dedede;
    color: #cecece;
    padding: 1px 2px;
  }
}

div#loading {
    position: fixed;
    top: 8em;
    right: 5em;
}

div#login {
  margin: 10em auto 0em auto;
  width: 40em;
  background-color: #f6f6f6;
  border-top: 10px solid $second-color;
  padding: 1em;
  -moz-border-radius: 0px 0px 15px 15px;
  -webkit-border-radius: 0px 0px 15px 15px;
  box-shadow: 8px 8px 25px black;
  
  .field {
    margin: auto;
    padding: 0.5em;
    width: 30%;
  }
  
  .field input[type="submit"]{
    font: inherit;
    padding: 0.5em;
    background: #D8D8D8;
    -moz-border-radius: 5px 5px 5px 5px;
    -webkit-border-radius: 5px 5px 5px 5px;
    @include transition(background, 0.7s);
  }
  
  .field input[type="submit"]:hover{
    background: #FAAC58;
    color: #ffffff;
  }
}

div#menu_container {
  padding: .5em 3em;
  height: 2.3em;
  background-color: #e3e0dd;
  border-bottom: 5px solid $second-color;
  
  a {
    padding: 12px 3px;
  }

  a.selected {
    font-weight: bold;
    text-decoration: none;
  }

  ul {
    margin: 0em 2em;
  }

  ul li {
    display: inline;
  }

  div#user_info {
    font-size: 1.2em;
    font-variant: small-caps;
    position: absolute;
    text-shadow: 0 0 black;
    right: 3em;
    top: .5em;
  }
}

div#user_info #user{
  display: inline;
  color: white;
  background: $second-color;
  padding: 2px 6px;
  line-height: 1.5em;
  font-weight: bold;
  text-shadow: 1px 1px 1px rgba(0, 0, 0, .3);
  box-shadow: 0 2px 2px -1px rgba(0, 0, 0, .4), 0 .9em .5em -0.2em rgba(255, 255, 255, .2) inset;
  -moz-border-radius: 5px 5px 5px 5px;
  -webkit-border-radius: 5px 5px 5px 5px;
}

div#user_info #user:hover{
  color: gray;
  @include transition(color, 1s);
}

div#main_container {
  background: $main-color;
}

ul#main_menu {
  font-variant: small-caps;
  font-size: 1.2em;
}

div#notice {
  position: absolute;
  bottom: .5em;
  left: 5%;
  right: 5%;
  background: #242429;
  color: #FAFAFA;
  font-size: 1.2em;
  font-weight: bold;
  text-align: center;
  padding: .5em .8em;
  border: solid #9C9C95;
  -moz-border-radius:15px 55px;
  -webkit-border-radius:15px 55px;
}

div#alert {
  position: absolute;
  bottom: .5em;
  left: 5%;
  right: 5%;
  background: $second-color;
  color: #FAFAFA;
  font-size: 1.2em;
  font-weight: bold;
  text-align: center;
  padding: .5em .8em;
  border: solid #9C9C95;
  -moz-border-radius: 15px 15px 15px 15px;
  -webkit-border-radius: 15px 15px 15px 15px;
}

div#notice div#close_notice, div#alert div#close_alert {
  position: absolute;
  top: .5em;
  right: 1em;
  font-size: .6em;
  font-weight: normal;
  border: 2px solid #6e6e6e;
}

div#notice div#close_notice a, div#alert div#close_alert a {
  background: inherit;
  color: #6e6e6e;
  text-decoration: none;
  font-size: 1.2em;
  font-weight: 600;
  padding: 1px 5px;
}

div#showed_data {
  margin: 1%;
  
  ul {
    padding-left: 2em;
  }
}

div.cuestionnaire{
  margin: 1%;
    
  .field{
    width: 20%;
  }

  h4{
    padding: 1.2em 0.5em;
  }

  .add_item{
    padding: 1.2em 0.5em;
  }

  .actions{
    padding: 1em 0.5em;    
  }

  .show_complete_cuestionnaire{
    padding: 1em 0.5em; 
  }

  .hide_complete_cuestionnaire{
    padding: 1em 0.5em; 
  }
}

div.answer_instance {
  list-style: none;
  margin-left: 1em;
  padding: 5px;
  
  select {
    width: 35px;
  }
}

div.auto_complete {
  width: 100%;
  background: #ffffff;
  z-index: 1;
    
  ul {
    border: 2px dotted $main-color;
    margin: 0em;
    padding: 0em;
    width: 99%;
    list-style-type: none;
  }

  ul li {
    margin: 0em;
    padding: .3em;
    white-space: normal;
  }

  ul li.selected {
    color: #666666;
    background-color: #f2f2f2;
  }

  ul strong.highlight {
    font-weight: bold;
    vertical-align: text-top;
  }

  span.aditional_info {
    display: block;
    color: #999999;
    font-size: .8em;
  }

  span.informal {
    vertical-align: text-top;
  }

  p.empty_result {
    background-color: #f2f2f2;
    color: #aa0000;
    border: 2px dotted $main-color;
    font-weight: bold;
    text-align: center;
    padding: .3em;
  }
}

div.box {
  border: 2px solid $main-color;
  padding: .5em;
  margin: 1em 0em;
}

div.field {
  margin-top: 0.8em;
  
  label{
    display: inline;
    font-weight: bold;
    color: #6e6e6e;
  }

  label.inline {
    display: inline;
  }
}

div.field_indent {
  padding-left: 1em;
}

div.field_degree {
  margin-top: 0.8em;
  padding-left: 1em;
  
  label{
    display: inline;
    font-weight: bold;
    color: #6e6e6e;
  }

  label.inline {
    display: inline;
  }
}

div.form_container {
  margin: 1%;

  div.one_column_form {
    width: 50%;
  }
}

div.item {
  width: 100%;
  float: left;
  clear: both;
  margin-bottom: .5em;
}

div.item_column {
  float: left;
  width: auto;
  display: inline;
}

div.item_column > h3 {
  font-size: 1em;
  padding: 2px 4px;
  color: #6e6e6e;
}

div.item_field {
  white-space: nowrap;
  float: left;
  display: inline;
  text-align: left;
  
  input[type="text"], textarea {
    width: 90%;
  }

  input[type="text"].date {
    width: 70%;
  }
}

div.items {
  width: 98%;
  display: block;
  
  div, h3 {
    display: inline;
  }

  div.column_headers {
    display: block;
    clear: both;
    color: #151215;
    border-bottom: 2px solid #dedede;
    margin-bottom: .7em;
  }
}

div#option {
    width: 16%;
}

div.personal_data{
  width: 20%;
    
  .field label{
    color: $main-color;
  }
}

div.project_form_part {
  display: block;
  margin-bottom: 1em;
  
  input[type="text"] {
    width: 15em;
  }
}

div.search {
  padding-right: 16px;
  
  input.search {
    background: transparent url(<%= image_path 'search.gif' %>) no-repeat scroll 3px;
    padding-left: 16px;
  }
}

div#search_form {
  display: block;
  border: 4px solid #dedede;
  padding: 1em;
  margin: 1em;
  width: 35%;
}

div#search_link {
  padding: 1em;
}

form.button-to input[type="submit"] {
  margin: 0px;
}

td.delete input[type="submit"] {
  display: inline;
  color: #fff;
  background: #FA0317;
  padding: 1px 2px;
  line-height: 1.3em;
  font-weight: bold;
  text-shadow: 1px 1px 1px rgba(0, 0, 0, .3);
  box-shadow: 0 2px 2px -1px rgba(0, 0, 0, .4), 0 .9em .5em -0.2em rgba(255, 255, 255, .2) inset;
  -moz-border-radius: 5px 5px 5px 5px;
  -webkit-border-radius: 5px 5px 5px 5px;
} 

td.delete input[type="submit"]:hover {
    background: #F56666;   
    line-height: 2em;
    @include transition(line-height, 1s);
}

h4.question {
    font-style: italic;
    font-weight: bold;
    margin-top: 1em;
    padding: 3px;
}

input[type="submit"] {
    margin: .5em 0em;
}

input[type="text"], input[type="password"], select, textarea {
    width: 95%;
    font-size: inherit;
    font-family: inherit;
    padding: 1px;
}

input[type="text"].error_field,
input[type="password"].error_field,
textarea.error_field,
select.error_field {
    border: 2px solid #aa0000;
}

table {
  margin: 1%;
  width: 98%;
  empty-cells: show;
  border-collapse: collapse;
  border: 4px solid #dedede;
  background-color: #ffffff;
}

table.full_width {
  width: 100%;
  margin: 0%;
}

table.grid td, table.grid th {
  border: 2px solid #dedede;
}

td {
  padding: .3em .5em;
}

textarea {
  font: inherit;
  height: 10em;
}

th {
  padding: .5em .5em;
  text-align: left;
  border-bottom: 4px solid #dedede;
}

tr.even {
  background: #e3e0dd;
}

tr.odd {
  background: #f2f2f2;
}

tr.odd:hover, tr.even:hover {
  background: #BBB7B3;    
}

ul.raw_list {
  margin: 1em 0em 1em 2em;
}
.questions ul.raw_list {
  list-style: square;
  margin: 1em 0em 2em 3em;
}

ul.answers {
  list-style: none;
  margin-left: 1em;
  
  em {
    text-decoration: underline;
    font-style: normal;
    background: #dedede;
  }
}

ul.horizontal_list > li {
    display: inline;
    margin-right: 1em;
}

.center{
    text-align: center;
}

.add_item {
    clear: both;
    margin: .5em 0em;
}

.question_instance {
  position: relative;
  
  .page_number {
    position: absolute;
    bottom: -2em;
    right: 0px;
  }
}

.subscript {
    font-size: xx-small;
    vertical-align: bottom;
}

.superscript {
    font-size: xx-small;
    vertical-align:top;
}

.ui-autocomplete span.informal {
  display: block;
  white-space: normal;
  font-size: .75em;
  color: #676767;
}

.ui-autocomplete span.label {
  white-space: normal;
}

.ui-datepicker-trigger {
  display: none;
}
