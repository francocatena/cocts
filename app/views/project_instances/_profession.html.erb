<% i18n_scope = [:projects, :questionnaire, :profession] %>
<% professions = [] %>

<% PROFESSIONS.each do |profession| %>
  <% professions << [t(profession, :scope => i18n_scope), profession] %>
<% end %>

<%= f.input :profession_certification, collection: professions, as: :checkbox,
  checked: @project_instance.profession_certification %>

<%= f.input :profession_ocuppation, collection: professions, as: :checkbox,
    checked: @project_instance.profession_ocuppation %>
