<% i18n_scope = [:projects, :questionnaire, :student, :options] %>
<%= statuses = [] %>

<% STUDENT_STATUSES.each do |student_status| %>
  <% statuses << [t(student_status, :scope => i18n_scope), student_status] %>
<% end %>

<%= f.input :student, collection: statuses, as: :radio_button,
  checked: @project_instance.student %>
