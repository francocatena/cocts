<% i18n_scope = [:projects, :questionnaire, :teacher, :options] %>
<% statuses = [] %>

<% TEACHER_STATUSES.each do |teacher_status| %>
  <% statuses << [t(teacher_status, :scope => i18n_scope), teacher_status] %>
<% end %>

<%= f.input :teacher_status, collection: statuses, as: :radio_button,
  checked: @project_instance.teacher_status %>
