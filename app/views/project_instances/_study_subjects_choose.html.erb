<% i18n_scope = [:projects, :sociodemographic_forms, :study_subjects_choose, :options] %>
<strong>
  <%= t(:question, :scope => [:projects, :sociodemographic_forms, :study_subjects_choose]) %>
</strong>
<ul class="horizontal_list">
  <% STUDY_SUBJECTS_CHOOSE.each_with_index do |study, i| %>
    <% study_id = :"#{study}_study_subjects_choose" %>
    <li>
      <label for="<%= study_id %>">
        <%= t(study, :scope => i18n_scope) %>
        <span class="subscript"><%= i + 1 %></span>
      </label>
      <%= radio_button_tag 'project_instance[study_subjects_choose]', study, 
          @project_instance.study_subjects_choose.eql?("#{study}"),
          :id => study_id %>
    </li>
  <% end %>
</ul>
