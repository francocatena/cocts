<% i18n_scope = [:projects, :sociodemographic_forms, :degree_university, :options] %>
<% degrees = [] %>

<% DEGREES_UNIVERSITY.each do |degree| %>
  <% degrees << [t(degree, :scope => i18n_scope), degree] %>
<% end %>

<%= f.input :degree_university, collection: degrees, as: :radio_buttons,
  checked: @project_instance.degree_university %>
