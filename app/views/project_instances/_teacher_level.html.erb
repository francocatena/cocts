<% i18n_scope = [:projects, :questionnaire, :teacher, :options] %>
<% levels = [] %>

<% TEACHER_LEVELS.each do |teacher_level| %>
  <% levels << [t(teacher_level, :scope => i18n_scope), teacher_level] %>
<% end %>

<%= f.input :teacher_level, collection: levels, as: :radio_button,
  checked: @project_instance.teacher_level %>
