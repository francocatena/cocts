<% i18n_scope = [:projects, :questionnaire] %>
<div id="showed_data">
  <p>
    <b><%= ProjectInstance.human_attribute_name :name %>:</b>
    <%= @project_instance.name %>
  </p>

  <p>
    <b><%= ProjectInstance.human_attribute_name :identifier %>:</b>
    <%= @project_instance.identifier %>
  </p>

  <p>
    <b><%= ProjectInstance.human_attribute_name :description %>:</b>
    <%= @project_instance.description %>
  </p>

  <p>
    <b><%= ProjectInstance.human_attribute_name :year %>:</b>
    <%= @project_instance.year %>
  </p>

  <p>
    <b><%= ProjectInstance.human_attribute_name :project_type %>:</b>
    <%= @project_instance.project_type_text %>
  </p>

  <p>
    <b><%= ProjectInstance.human_attribute_name :valid_until %>:</b>
    <%= l(@project_instance.valid_until, :format => :long) if @project_instance.valid_until %>
  </p>
  
  <% unless @project_instance.first_name.blank? %>
  <p>
    <b><%= ProjectInstance.human_attribute_name :first_name %>:</b>
    <%= @project_instance.first_name %>
  </p>
  <% end %>

  <% unless @project_instance.professor_name.blank?  %>
  <p>
    <b><%= ProjectInstance.human_attribute_name :professor_name %>:</b>
    <%= @project_instance.professor_name %>
  </p>
  <% end %>
  
  <% unless @project_instance.group_name.blank?  %>
  <p>
    <b><%= ProjectInstance.human_attribute_name :group_name %>:</b>
    <%= @project_instance.group_name %>
  </p>
  <% end %>
  
  <% unless @project_instance.group_type.blank?  %>
  <p>
    <b><%= ProjectInstance.human_attribute_name :group_type %>:</b>
    <%= t(:"projects.questionnaire.group_type.options.#{@project_instance.group_type}") %>
  </p>
  <% end %>
  
  <% unless @project_instance.email.blank?  %>
  <p>
    <b><%= ProjectInstance.human_attribute_name :email %>:</b>
    <%= @project_instance.email %>
  </p>
  <% end %>
  
  <h1 style="margin-top: 1em;"><%= t(:presentation, :scope => i18n_scope) %></h1>
  <p><%= t(:presentation_text, :scope => i18n_scope) %></p>
  <% i18n_scope << :scale_table %>
  <table class="grid full_width" style="margin: 1em 0em;">
    <thead>
      <tr>
        <th colspan="4"><%= t(:disagreement_title, :scope => i18n_scope) %></th>
        <th><%= t(:undecided_title, :scope => i18n_scope) %></th>
        <th colspan="4"><%= t(:in_agreement_title, :scope => i18n_scope) %></th>
        <th colspan="2"><%= t(:others_title, :scope => i18n_scope) %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% i18n_scope << :disagreement %>
        <% [:'1', :'2', :'3', :'4'].each do |opt| %>
          <td><%= t(opt, :scope => i18n_scope) %></td>
        <% end %>
        <% i18n_scope[-1] = :undecided %>
        <% [:'5'].each do |opt| %>
          <td><%= t(opt, :scope => i18n_scope) %></td>
        <% end %>
        <% i18n_scope[-1] = :in_agreement %>
        <% [:'6', :'7', :'8', :'9'].each do |opt| %>
          <td><%= t(opt, :scope => i18n_scope) %></td>
        <% end %>
        <% i18n_scope[-1] = :others %>
        <% [:'E', :'S'].each do |opt| %>
          <td><%= t(opt, :scope => i18n_scope) %></td>
        <% end %>
      </tr>
      <tr>
        <% ['1', '2', '3', '4', '5', '6', '7', '8', '9', 'E', 'S'].each do |opt| %>
          <td><%= opt %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
  <% i18n_scope.slice!(-2, 2) %>
  <%= raw textilize(t(:scale_clarification, :scope => i18n_scope)) %>
  <%= render 'projects/answer_example' %>

  <h2 style="margin: 1em 0em; font-weight: normal;">
    <%= textilize_without_paragraph t(:sociodemographic_forms_title_instance,
      :scope => i18n_scope) %>
  </h2>

  <p>
    <b><%= t:'projects.sociodemographic_forms.name.option' %>:</b>
    <%= @project_instance.first_name %>
  </p>
  
  <% unless @project_instance.professor_name.blank?  %>
  <p>
    <b><%= t:'projects.sociodemographic_forms.professor_name.option' %>:</b>
    <%= @project_instance.professor_name %>
  </p>
  <% end %>
  
  <% unless @project_instance.country.blank?  %>
  <p>
    <b><%= t:'projects.sociodemographic_forms.country.option' %>:</b>
    <%= @project_instance.country %>
  </p>
  <% end %>
  
  <% unless @project_instance.age.blank? %>
  <p>
    <b><%= t:'projects.sociodemographic_forms.age.option' %>:</b>
    <%= @project_instance.age %>
  </p>
  <% end %>
  
  <% unless @project_instance.genre.blank?  %>
  <p>
    <b><%= t:'projects.sociodemographic_forms.genre.option' %>:</b>
    <%= t:"projects.questionnaire.genre.options.#{@project_instance.genre}" %>
  </p>
  <% end %>
  
  <% unless @project_instance.student_status.blank?  %>
  <p>
    <b><%= t:'projects.sociodemographic_forms.student.option' %>:</b>
    <%= t:"projects.questionnaire.student.options.#{@project_instance.student_status}" %>
  </p>
  <% end %>
  
  <% unless @project_instance.teacher_status.blank?  %>
  <p>
    <b><%= t:'projects.sociodemographic_forms.teacher.option' %>:</b>
    <%= t:"projects.questionnaire.teacher.options.#{@project_instance.teacher_status}" %>
  </p>
  <% end %>
  
  <% if @project_instance.teacher_status.present? && @project_instance.teacher_status!="not_a_teacher" %>
  <p>
    <b><%= t:'projects.sociodemographic_forms.teacher_level.option' %>:</b>
    <%= t:"projects.questionnaire.teacher_level.options.#{@project_instance.teacher_level}" %>
  </p>
  <% end %>
  
  <% unless @project_instance.degree.blank?  %>
  <p>
    <b><%= t:'projects.sociodemographic_forms.degree.option' %>:</b>
    <%= t:"projects.questionnaire.degree.options.#{@project_instance.degree}" %>
  </p>
  <% end %>
  
  <% if @project_instance.degree_school.present? %>
    <strong><%= t(:'projects.sociodemographic_forms.degrees.option') %>: </strong>
  <div class="field_indent">
    <p>
      <b><%= t:'projects.sociodemographic_forms.degree_school.option' %>:</b>
      <%= t:"projects.sociodemographic_forms.degree_school.options.#{@project_instance.degree_school}" %>
  </p>
  </div>
  <% end %>
  
  <% if @project_instance.degree_university.present? %>
  <div class="field_indent">    
    <p>
      <b><%= t:'projects.sociodemographic_forms.degree_university.option' %>:</b>
      <%= t:"projects.sociodemographic_forms.degree_university.options.#{@project_instance.degree_university}" %>
    </p>
  </div>
  <% end %>
  
  <% if @project_instance.study_subjects_different.present? %>
  <p>
