<%= javascript_include_tag 'pagination' %>

<div id="search_link">
<%= link_to t(:'questions.search_questions'), '#', :class => 'search' %>
</div>
<div id="search_form" style="display: none;">
  <%= form_tag questions_path, :method => 'get', :id => "questions_search" do %>
    <%= hidden_field_tag :direction, params[:direction] %>
    <%= hidden_field_tag :sort, params[:sort] %>
    <div id="field">
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag t:'labels.search', :name => nil %>
    </div>
  <% end %>
   
  </div>

<div id="questions">
<%= render :partial => 'questions' %>
</div>
<div id="links">
  <%= link_to t(:'questions.new_link'), new_question_path,
  :class => :important_action if @auth_user.admin? %>
</div>
<div id="links">
  <%= link_to t(:'questions.import_csv_file'), import_csv_questions_path, 
  :class => :important_action if @auth_user.admin?%>
</div>

  





