<div class="answer item">
  <div class="item_field" style="width: 20%;">
    <%= f.input :clarification %>
  </div>
  <div class="item_field" style="width: 20%;">
    <%= f.input :category, collection: Answer::CATEGORIES.map { |k, v|
          [t("questions.answers.long_type.#{k}"), v]
        }, prompt: true %>
  </div>
  <div class="item_field" style="width: 50%;">
    <%= f.input :answer %>
  </div>
  <div class="item_field" style="width: 10%;">
    <%= f.input :order, as: :hidden, class: :sort_number %>
    <%= hidden_lock_version(f) %>
    <%= remove_item_link(f) %>
    <%= link_to_move %>
  </div>
</div>
<script type="text/javascript">
  FormUtil.completeSortNumbers();
</script>
