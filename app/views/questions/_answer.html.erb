<fieldset class="answer">
  <div class="col-md-3">
    <%= f.input :answer, input_html: { autofocus: true } %>
  </div>
  <div class="col-md-3">
    <%= f.input :category, collection: Answer::CATEGORIES.map { |k, v|
        [t("questions.answers.long_type.#{k}"), v]
      }, prompt: true %>
  </div>
  <div class="col-md-3">
    <%= f.input :clarification %>
  </div>
  <div class="col-md-3">
    <%= f.input :order, as: :hidden, input_html: {
        class: :sort_number
      } %>
    <%= link_to_remove_nested_item f %>
    <%= hidden_lock_version(f) %>
  </div>
</fieldset>

<script type="text/javascript">
  FormUtil.completeSortNumbers();
</script>
