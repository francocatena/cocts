<p>
  <strong><%= Question.human_attribute_name :dimension %></strong>
  <%= @question.dimension_text %>
</p>

<p>
  <strong><%= Question.human_attribute_name :code %>:</strong>
  <%= @question.code %>
</p>

<p>
  <strong><%= Question.human_attribute_name :question %>:</strong>
  <%= @question.question %>
</p>

<% unless @question.answers.empty? %>
  <p>
    <strong><%= t('show.answer', :count => @question.answers.count)  %>:</strong>
  </p>

  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= Answer.human_attribute_name :clarification %></th>
        <th><%= Answer.human_attribute_name :category %></th>
        <th><%= Answer.human_attribute_name :answer %></th>
      </tr>
    </thead>

    <tbody>
      <% @question.answers.each do |answer| %>
        <tr>
        	<td><%= answer.clarification %></td>
          <td><%= t :"questions.answers.long_type.#{Answer::CATEGORIES.invert[answer.category]}" %></td>
        	<td><%= answer.answer %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<hr />

<div class="form-footer">
  <%= link_to_back %> |
  <% if @auth_user.admin? %>
    <%= link_to t('labels.edit'), edit_question_path(@question) %> |
  <% end %>
  <%= link_to t('labels.list'), questions_path %>
</div>
