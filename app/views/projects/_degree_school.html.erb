<% i18n_scope = [:projects, :sociodemographic_forms, :degree_school, :options] %>

<strong><%= t('projects.sociodemographic_forms.degrees.question') %></strong>

<strong> <%= t('projects.sociodemographic_forms.degree_school.question') %></strong>

<% DEGREES_SCHOOL.each_with_index do |degree, i| %>
  <% degree_school_id = i %>
  <% if i == 0 %>
    <strong><%= t('projects.sociodemographic_forms.degree_school.courses') %>: </strong>
  <% end %>

  <%= radio_button_tag :degree_shool, i, false, :id => degree_school_id %>
  <label for="<%= degree_school_id %>">
    <%= t(degree, :scope => i18n_scope) %>
  </label>
<% end %>
