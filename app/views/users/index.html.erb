<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name 'user' %></th>
      <th><%= User.human_attribute_name 'name' %></th>
      <th><%= User.human_attribute_name 'enable' %></th>
      <th><%= User.human_attribute_name 'admin' %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr class="<%= cycle(:even, :odd) %>">
      <td><%= user.user %></td>
      <td><%= user.to_s %></td>
      <td><%= user.enable? ? :'labels.yes' : :'labels.no' %></td>
      <td><%= user.admin? ? :'labels.yes' : :'labels.no' %></td>
      <td><%= link_to '&#xe074;'.html_safe, user, :class => :iconic, 
        :title => t(:'labels.show'), :data => {:'show-tooltip' => true} %></td>
      <td><%= link_to '&#x270e;'.html_safe, edit_user_path(user), :class => :iconic,
        :title => (t:'labels.edit'), :data => {:'show-tooltip' => true} %></td>
      <td class ="delete"><%= button_to t(:'labels.delete'), user,
          :confirm => t(:'messages.confirmation_question'), :method => :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<div id="links">
  <%= pagination_links @users %>
  <%= link_to t(:'labels.new'), new_user_path, :class => :important_action %>
</div>