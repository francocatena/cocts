<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name('user') %></th>
      <th><%= User.human_attribute_name('name') %></th>
      <th><%= User.human_attribute_name('enable') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr class="<%= cycle(:even, :odd) %>">
      <td><%= h user.user %></td>
      <td><%= h user.to_s %></td>
      <td><%= t user.enable? ? :'labels.yes' : :'labels.no' %></td>
      <td><%= link_to t(:'labels.show'), user %></td>
      <td><%= link_to t(:'labels.edit'), edit_user_path(user) %></td>
      <td><%= button_to t(:'labels.delete'), user,
          :confirm => t(:'messages.confirmation_question'), :method => :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<div id="links">
  <%= pagination_links @users %>
  <%= link_to t(:'users.new_link'), new_user_path, :class => :important_action %>
</div>