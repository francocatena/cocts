<div id="showed_data">
  <p>
    <b><%= Topic.human_attribute_name :title %>:</b>
    <strong><%= @topic.code %> - <strong><%= @topic.title %>
  </p>
  <% unless @topic.subtopics.empty? %>
  <b><%= t(:'activerecord.models.subtopics') %>:</b>
  <ul>
  <% @topic.subtopics.each do |subtopic| %>
      <li><%= subtopic.code %> - <%= subtopic.title %></li>
  <% end %>
  </ul>
  <% end %>
</div>

<div id="links">
  <%= link_to t(:'labels.edit'), edit_topic_path(@topic), :class => :real %> |
  <%= link_to t(:'labels.list'), topics_path, :class => :real %> |
  ‚Üê<%= link_to_back %>
</div>
