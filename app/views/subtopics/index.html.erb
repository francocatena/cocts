<table class="table table-hover">
  <thead>
    <tr>
      <th><%= Subtopic.human_attribute_name :title %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

<% @subtopics.each do |subtopic| %>
  <tr class="<%= cycle(:even, :odd) %>">
    <td><%= "#{subtopic.code}. #{subtopic.title}" %></td>
    <td><%= link_to_show subtopic %></td>
    <td><%= link_to_edit edit_subtopic_path(subtopic) %></td>
    <td><%= link_to_destroy subtopic if @auth_user.admin? %></td>
  </tr>
<% end %>
</table>

<hr />

<div>
  <div class='pull-right'>
    <%= pagination_links @subtopics %>
  </div>
  <%= link_to t('labels.new'), new_subtopic_path, class: 'btn btn-primary' %>
</div>

